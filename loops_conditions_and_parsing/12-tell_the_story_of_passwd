#!/usr/bin/env bash
# This script reads /etc/passwd and tells a story about each user using while loop and IFS

while IFS=":" read -r username password userid groupid userinfo homedir shell; do
    echo "The user $username is part of the $groupid gang, lives in $homedir and rides $shell. USER ID's place is protected by the passcode $password, more info about the user here: $userinfo"
done < /etc/passwd
